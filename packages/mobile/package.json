{
	"name": "@hideout/mobile",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"start": "expo start -c",
		"android": "expo run:android",
		"ios": "expo run:ios",
		"web": "expo start --web",
		"test": "jest --watchAll",
		"format": "biome format --write",
		"lint": "biome lint --write",
		"build-android": "npx expo run:android",
		"build-ios": "npx expo run:ios",
		"build-ios-device": "npx expo run:ios --device",
		"build-ios-local": "eas build --profile production --platform ios --local --output production-ios-local.ipa",
		"build-android-local": "eas build --profile production --platform android --local --output production-android-local.aab",
		"eas-update": "eas update --branch production",
		"prebuild": "npx expo prebuild --clean",
		"clean": "rm -fr .expo node_modules dist ios android"
	},
	"packageManager": "pnpm@10.14.0",
	"dependencies": {
		"@backpackapp-io/react-native-toast": "^0.14.0",
		"@expo-google-fonts/inter": "^0.4.1",
		"@expo-google-fonts/permanent-marker": "^0.4.0",
		"@expo/metro-runtime": "~5.0.4",
		"@expo/vector-icons": "~14.1.0",
		"@gorhom/bottom-sheet": "^5.1.8",
		"@hookform/resolvers": "^4.1.3",
		"@react-native-async-storage/async-storage": "2.1.2",
		"@react-navigation/bottom-tabs": "^7.2.0",
		"@react-navigation/native": "^7.0.14",
		"babel-preset-expo": "~13.0.0",
		"expo": "~53.0.0",
		"expo-asset": "~11.1.7",
		"expo-blur": "~14.1.5",
		"expo-camera": "~16.1.11",
		"expo-constants": "~17.1.7",
		"expo-font": "~13.3.2",
		"expo-haptics": "~14.1.4",
		"expo-linear-gradient": "~14.1.5",
		"expo-linking": "~7.1.7",
		"expo-localization": "~16.1.6",
		"expo-notifications": "^0.31.4",
		"expo-router": "~5.1.4",
		"expo-secure-store": "~14.2.3",
		"expo-splash-screen": "^0.30.10",
		"expo-status-bar": "~2.2.3",
		"expo-symbols": "~0.4.5",
		"expo-system-ui": "~5.0.10",
		"expo-updates": "~0.28.17",
		"expo-web-browser": "~14.2.0",
		"i18next": "^25.3.2",
		"nativewind": "^4.1.23",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"react-hook-form": "^7.54.2",
		"react-i18next": "^15.5.1",
