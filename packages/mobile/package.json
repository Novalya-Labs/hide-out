		"jest": "^29.2.1",
		"jest-expo": "~53.0.0",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"react-native-svg-transformer": "^1.5.1",
		"react-native-url-polyfill": "^2.0.0",
		"react-test-renderer": "19.0.0",
		"tailwindcss": "^3.4.17",
		"typescript": "~5.8.3"
	},
	"expo": {
		"doctor": {
			"reactNativeDirectoryCheck": {
				"listUnknownPackages": false
			}
		}
	},
	"jest": {
		"preset": "jest-expo"
	}
