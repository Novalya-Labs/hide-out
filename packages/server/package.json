{
	"name": "@hideout/server",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "wrangler dev --local",
		"deploy": "wrangler deploy",
		"db:create": "wrangler d1 create hideout-db",
		"db:generate": "wrangler d1 migrations create hideout-db",
		"db:local": "wrangler d1 migrations apply hideout-db --local",
		"db:remote": "wrangler d1 migrations apply hideout-db --remote",
		"db:status": "wrangler d1 migrations list hideout-db",
		"db:reset": "wrangler d1 execute hideout-db --local --file=./reset-local.sql"
	},
	"dependencies": {
		"@cloudflare/workers-types": "^4.20250805.0",
		"@hono/zod-validator": "^0.7.2",
		"hono": "^4.8.12",
		"zod": "^4.0.14"
	},
	"devDependencies": {
		"wrangler": "^4.28.0",
		"typescript": "^5.9.2",
		"@types/geojson": "^7946.0.14"
	}
}
